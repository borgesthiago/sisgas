{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.documento, {'attr': {'data-row-class': 'three wide'}}) }}
             {{ form_row(form.origem, {'attr': {'data-row-class': 'five wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.funcionarioOrigem, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.destino, {'attr': {'data-row-class': 'five wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.observacao, {'attr': {'data-row-class': 'eight wide'}}) }}
        </div> 
        <div class="fields">
            <div class="ui right floated buttons">
                <a href="{{ path('documento_index') }}" class="ui secondary button icon"><i class="arrow alt circle left icon"></i> Voltar</a>
                <button class="ui positive button">Encaminhar <i class="arrow alt circle right icon"></i></button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}