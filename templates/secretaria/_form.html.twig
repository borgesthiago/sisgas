{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.nome, {'attr': {'data-row-class': 'twelve wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.endereco, {'attr': {'data-row-class': 'eight wide'}}) }}
            {{ form_row(form.telefone, {'attr': {'data-row-class': 'four wide'}}) }}
        </div>
        <div class="fields">
            {{ form_row(form.email, {'attr': {'data-row-class': 'eight wide'}}) }}
        </div>
        <div class="fields">
            <div class="ui right floated buttons">
                <button class="ui button">{{ button_label|default('Salvar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}