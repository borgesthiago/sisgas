<form method="post" action="{{ path('secretaria_delete', {'id': secretarium.id}) }}" onsubmit="return confirm('Tem certeza que deseja EXCLUIR?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ secretarium.id) }}">
    <button class="btn-sm btn-danger"><i class="fa fa-trash"></i> Delete</button>
</form>
