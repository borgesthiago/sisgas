<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>SisGAS - {% block title %}{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <link rel="stylesheet" href="{{ asset('assets/semantic.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/espaco.css') }}">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
         {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="ui pointing menu">
            <a class="active item" href="{{ path('dashboard') }}">
                Home
            </a>
            <div class="menu">
                <div class="ui dropdown item"><i class="users blue icon"></i>
                    Funcionários <i class="dropdown icon"></i>
                    <div class="menu">
                        <a class="item" href="{{ path('funcionario_index') }}">Listar</a>
                        <a class="item" href="{{ path('funcionario_novo') }}">Cadastrar</a>
                    
                        <div class="divider"></div>
                        <div class="item">
                            <i class="dropdown icon"></i>
                            Salário
                            <div class="menu">
                                <a class="item" href="{{ path('remuneracao_index') }}">Listar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="menu">
                <div class="ui dropdown item"><i class="file red icon"></i>
                    Documentos <i class="dropdown icon"></i>
                    <div class="menu">
                        <a class="item" href="{{ path('documento_index') }}">Listar</a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <a class="item" href="{{ path('documento_new') }}">Cadastrar</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="menu">
                <div class="ui dropdown item"><i class="user icon"></i>
                Usuários <i class="dropdown icon"></i>
                <div class="menu">
                    <a class="item" href="{{ path('usuario_index') }}">Listar</a>
                    <a class="item" href="{{ path('usuario_new') }}">Cadastrar</a>
                </div>
                </div>
            </div>
            <div class="menu">
                <div class="ui dropdown item"><i class="file icon"></i>
                Relatórios <i class="dropdown icon"></i>
                <div class="menu">
                    <a class="item" href="{{ path('relatorio_funcionario') }}">Funcionário</a>
                    <a class="item" href="{{ path('relatorio_secretaria') }}">Secretaria</a>
                </div>
                </div>
            </div>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="menu">
                <div class="ui dropdown item"><i class="cogs icon"></i>
                    Configurações <i class="dropdown icon"></i>
                    <div class="menu">
                        <div class="item">
                            <i class="lock icon"></i>
                            Login <i class="dropdown icon"></i>
                            <div class="menu">
                                <a class="item" href="{{ path('user_index') }}">Listar</a>
                                <a class="item" href="{{ path('user_novo') }}">Cadastrar</a>
                            </div>
                        </div>
                        <div class="item"><i class="building icon"></i>
                            Órgãos <i class="dropdown icon"></i>
                            <div class="menu">
                                <a class="item" href="{{ path('secretaria_index') }}">Listar</a>
                                <a class="item" href="{{ path('secretaria_novo') }}">Cadastrar</a>             
                            </div>
                        </div>
                        <div class="item"><i class="home icon"></i>
                            Serviços <i class="dropdown icon"></i>
                            <div class="menu">
                                <a class="item" href="{{ path('servicos_index') }}">Listar</a>
                                <a class="item" href="{{ path('servicos_index') }}">Cadastrar</a>        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="right menu"> 
                <div class="menu">
                    <div class="ui dropdown item">
                        <i class="user blue icon"></i> 
                        {{ app.user.funcionario ? app.user.funcionario.nome : app.user.email }}      
                        <i class="dropdown icon"></i>
                        <div class="menu">
                            <a class="item" href="{{ path('app_logout') }}"><i class="sign-out red icon"></i> Sair</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="ui {{ label }} message">
                        <i class="close icon"></i>
                        <div class="header">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        
        <script
                src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script src="{{ asset('assets/semantic.min.js') }}"></script>
        <script defer src="https://use.fontawesome.com/releases/v5.0.9/js/all.js"
                integrity="sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl"
                crossorigin="anonymous"></script>
        <script src="{{ asset('assets/js/drop.js') }}"></script>
        
        {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>