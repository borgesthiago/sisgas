{% extends 'base.html.twig' %}

{% block title %}Dados Login{% endblock %}

{% block body %}
   <div class="espaco">
    <h1>Dados do Login</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

   <div class="extra content">
        <a href="{{ path('user_editar', {'id': user.id}) }}"><button type="button" class="ui brown button"><i class="edit icon"></i> Editar</button></a>
            {% if is_granted('ROLE_ADMIN') %}
            {{ include('user/_delete_form.html.twig') }}
            {% endif %}
    </div>
{% endblock %}
