<form method="post" class="delete form" action="{{ path('documento_delete', {'id': documento.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ documento.id) }}">
    <button class="ui negative button icon"><i class="trash icon"></i></button>
</form>
