{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.tipo, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.numero, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.dataRecebido, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.prazo, {'attr': {'data-row-class': 'three wide'}}) }}
        </div>
          <div class="fields">
            {{ form_row(form.origem, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.reiteracao, {'attr': {'data-row-class': 'three wide'}}) }}
            {{ form_row(form.numero_reiteracao, {'attr': {'data-row-class': 'three wide'}}) }}
        </div>
        <div class="fields">
            <div class="ui right floated buttons">
                <a href="{{ path('documento_index') }}" class="ui secondary button icon"><i class="arrow alt circle left icon"></i> Voltar</a>
                <button class="ui primary button">Salvar <i class="save circle right icon"></i></button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
