{% extends 'base.html.twig' %}

{% block title %}Documento index{% endblock %}

{% block body %}
    <h1>Documento index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Numero</th>
                <th>DataRecebido</th>
                <th>Prazo</th>
                <th>Reiteracao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for documento in documentos %}
            <tr>
                <td>{{ documento.id }}</td>
                <td>{{ documento.tipo }}</td>
                <td>{{ documento.numero }}</td>
                <td>{{ documento.dataRecebido ? documento.dataRecebido|date('Y-m-d') : '' }}</td>
                <td>{{ documento.prazo }}</td>
                <td>{{ documento.reiteracao ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('documento_show', {'id': documento.id}) }}">show</a>
                    <a href="{{ path('documento_edit', {'id': documento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('documento_new') }}">Create new</a>
{% endblock %}
