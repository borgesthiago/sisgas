{% extends 'base.html.twig' %}

{% block title %}Documento{% endblock %}

{% block body %}
    <h1>Documento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ documento.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ documento.tipo }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ documento.numero }}</td>
            </tr>
            <tr>
                <th>DataRecebido</th>
                <td>{{ documento.dataRecebido ? documento.dataRecebido|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prazo</th>
                <td>{{ documento.prazo }}</td>
            </tr>
            <tr>
                <th>Reiteracao</th>
                <td>{{ documento.reiteracao ? 'Yes' : 'No' }}</td>
            </tr>       
        </tbody>
    </table>
<table class="table">
        <thead>
            <tr>
                <th>Destino</th>
                <th>Enviado</th>
                <th>Recebido</th>
                <th>Observacao</th>
            </tr>
        </thead>
        <tbody>
        {% for tramitacao in documento.tramitacao %}
            <tr>
                <td>{{ tramitacao.destino }}</td>
                <td>{{ tramitacao.dataInicio ? tramitacao.dataInicio|date('d/m/Y') : '' }}</td>
                <td>{{ tramitacao.dataFim ? tramitacao.dataFim|date('d/m/Y') : '' }}</td>
                <td>{{ tramitacao.observacao }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('documento_index') }}">back to list</a>

    <a href="{{ path('documento_edit', {'id': documento.id}) }}">edit</a>

    {{ include('documento/_delete_form.html.twig') }}
{% endblock %}
