<form method="post" class="delete form" action="{{ path('funcionario_delete', {'id': funcionario.id}) }}" onsubmit="return confirm('Tem certeza que deseja EXCLUIR?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ funcionario.id) }}">
    <button class="ui red button"><i class="trash alt icon"></i> Delete</button>
</form>
