                <div class="ui card">
                    <div class="content">
                        <div class="header"> 
                        {% if funcionario.remuneracao.salario|default('') %}
                            R$ <a>{{ funcionario.remuneracao.salario|number_format(2, ',','.') }}</a>
                        {% else %}
                            R$ {{ funcionario.remuneracao.salario|default('0,00') }}
                        {% endif %}
