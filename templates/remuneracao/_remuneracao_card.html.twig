                        <div class="ui small feed">
                            <div class="event">
                                <div class="content">
                                    <div class="summary">
                                    {% if funcionario.remuneracao.gratificacao|default('') %}
                                        Gratificação R$: <a>{{ funcionario.remuneracao.gratificacao|number_format(2, ',','.') }}</a>
                                    {% else %}
                                       Gratificação R$: {{ funcionario.remuneracao.gratificacao|default('0,00') }}
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="event">
                                <div class="content">
                                    <div class="summary">
                                       {% if funcionario.remuneracao.desconto|default('') %}
                                        Desconto R$: <a>{{ funcionario.remuneracao.desconto|number_format(2, ',','.') }}</a>
                                    {% else %}
                                       Desconto R$: {{ funcionario.remuneracao.desconto|default('0,00') }}
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
