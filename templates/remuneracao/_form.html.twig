{% form_theme form 'form/form_div.html.twig' %}
<div class="ui grid">
    <div class="column">
        {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <div class="fields">
            {{ form_row(form.salario, {'attr': {'data-row-class': 'two wide'}}) }}
             {{ form_row(form.gratificacao, {'attr': {'data-row-class': 'two wide'}}) }}
            {{ form_row(form.desconto, {'attr': {'data-row-class': 'three wide'}}) }}
           
        </div>
        <div class="fields">
            <div class="ui right floated buttons">
                <button class="ui button">{{ button_label|default('Salvar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}