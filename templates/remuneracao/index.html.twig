{% extends 'base.html.twig' %}

{% block title %}Remuneracao{% endblock %}

{% block body %}
   <div class="espaco">
    <h3>Listagem de Remuneração</h3>        
    <table class="ui celled table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Salario</th>
                <th>Gratificacao</th>
                <th>Desconto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for remuneracao in remuneracaos %}
            <tr>
                <td>{{ remuneracao.id }}</td>
                <td>R$ {{ remuneracao.salario |number_format(2, ',', '.') }}</td>
                <td>R$ {{ remuneracao.gratificacao |number_format(2, ',', '.') }}</td>
                <td>R$ {{ remuneracao.desconto |number_format(2, ',', '.')  }}</td>
                <td>
                <div class="ui small basic icon buttons">
                    <a href="{{ path('remuneracao_ver', {'id': remuneracao.id}) }}"><button class="ui button"><i class="file icon"></i></button></a>
                    <a href="{{ path('remuneracao_editar', {'id': remuneracao.id}) }}"><button class="ui button"><i class="edit icon"></i></button></a>
                    <a href="{{ path('remuneracao_delete', {'id': remuneracao.id}) }}"><button class="ui button"><i class="trash icon"></i></button></a>
                </div>                   
                </td>
            </tr>
        {% else %}
                <td colspan="6">nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
